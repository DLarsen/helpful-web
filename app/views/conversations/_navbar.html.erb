<div class="navbar">

  <div class="navbar-left">
    <%= form_tag("/conversations/index", :method => "get", :class => "input-append") do %>
       <%= text_field_tag :q, @query,:placeholder => 'Search conversations' %>
	  <button class="btn" type="button" onclick="submit();"><i class="icon-search"></i>Search</button>
    <% end %>
  </div>

  <div class="navbar-right">
    <ul class="nav navbar-nav">
      <% if user_signed_in? %>
        <li>
          <%= link_to('Edit registration', edit_user_registration_path) %>
        </li>
      <% else %>
        <li>
          <%= link_to('Register', new_account_path)  %>
        </li>
      <% end %>

      <% if user_signed_in? %>
        <li>
          <%= link_to('Logout', destroy_user_session_path, method: :delete) %>
        </li>
      <% else %>
        <li>
          <%= link_to('Login', new_user_session_path)  %>
        </li>
      <% end %>
    </ul>
  </div>

</div>
