<% unless flash.empty? %>
  <div id="flash-messages">
    <% flash.each do |key, value| %>
      <%= content_tag(:div, :class => flash_class(key)) do %>
        <%= value %>
        <button type='button' class='close' data-dismiss='alert'>&times;</button>
      <% end %>
    <% end %>
  </div>
<% end %>
