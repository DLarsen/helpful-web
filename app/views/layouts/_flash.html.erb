<% unless flash.empty? %>
  <div id="flash-messages">
    <% flash.each do |key, value| %>
      <%= content_tag(:div, :class => "#{flash_class(key)} alert-dismissable") do %>
        <%= value %>
        <button type="button" class="close" data-dismiss="alert" data-target=".alert-dismissable">&times;</button>
      <% end %>
    <% end %>
  </div>
<% end %>
