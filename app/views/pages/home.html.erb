<% content_for :meta do -%>
  <title>Helpful is a simple support tool you won't need help using.</title>
  <meta property="og:site_name" content="Helpful" />
  <meta property="og:title" content="Helpful — Help that doesn't hurt">
  <meta property="og:url" content="http://helpful.io/">
  <meta property="og:image" content="<%= image_url('logo-64.png') %>"/>
  <meta property="og:description" content="Helpful is a simple support tool you won't need help using.">

  <meta name="twitter:card" content="summary">
  <meta name="twitter:title" content="Helpful">
  <meta name="twitter:description" content="Helpful is a simple support tool you won't need help using.">
  <meta name="twitter:image:src" content="<%= image_url('logo.png') %>">
  <meta name="twitter:domain" content="helpful.io">
<% end -%>

<div class="container">
  <div class="section section-full-page">
    <div class="page-middle">
      <div class="row">
        <div class="col-md-8 col-md-offset-2">
          <%= image_tag('logo.png') %>
          <h1 class="lead-header">We redesigned support to get out of the way, so you focus on being a helpful human.</h1>
          <p class="lead-text">Helping your customers with good answers and thoughtful direction should be a breeze, focused 100% on support - and nothing else.</p>
          <p class="lead-text">C'mon, let's see it in action.</p>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="section section-half-page section-screenshots">
  <div class="page-middle">
    <div class="row">
      <div class="screenshot">
        <div class="inner">
          <%= image_tag('home/widget.png') %>
        </div>
      </div>
      <div class="screenshot screenshot-middle">
        <div class="inner">
          <%= image_tag('home/app.png') %>
        </div>
      </div>
      <div class="screenshot">
        <div class="inner last">
          <%= image_tag('home/email.png') %>
        </div>
      </div>
    </div>
    <div class="row screenshot-text">
      <div class="screenshot">
        <div class="inner">
          <p>Don’t make your customers swim through hundreds of choices.</p>
        </div>
      </div>
      <div class="screenshot screenshot-middle">
        <div class="inner">
          <p>Don’t make your customers swim through hundreds of choices.</p>
        </div>
      </div>
      <div class="screenshot">
        <div class="inner last">
          <p>Don’t make your customers swim through hundreds of choices.</p>
        </div>
      </div>
    </div>
  </div>
</div>



<script>
$(document).on('ready page:load', function() {
  var windowHeight = $(window).outerHeight();
  $('.section-full-page').css('height', (windowHeight - 25) + 'px');
  $('.section-half-page').css('height', ((windowHeight - 25) / 2.0) + 'px');
  $('.screenshot').addClass("animated bounceInUp")
  $(window).scroll(function() {
     if($(window).scrollTop() > 200) {
        $('.screenshot').addClass("animated fadeInDown")
     }
  });
});
</script>
