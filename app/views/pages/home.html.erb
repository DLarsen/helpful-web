<% content_for :meta do -%>
  <title>Helpful is a simple support tool you won't need help using.</title>
  <meta property="og:site_name" content="Helpful" />
  <meta property="og:title" content="Helpful — Help that doesn't hurt">
  <meta property="og:url" content="http://helpful.io/">
  <meta property="og:image" content="<%= image_url('logo-64.png') %>"/>
  <meta property="og:description" content="Helpful is a simple support tool you won't need help using.">

  <meta name="twitter:card" content="summary">
  <meta name="twitter:title" content="Helpful">
  <meta name="twitter:description" content="Helpful is a simple support tool you won't need help using.">
  <meta name="twitter:image:src" content="<%= image_url('logo.png') %>">
  <meta name="twitter:domain" content="helpful.io">
<% end -%>

<div class="container">
  <div class="section section-full-page">
    <div class="page-middle">
      <div class="row">
        <div class="col-md-8 col-md-offset-2">
          <%= image_tag('logo.png') %>
          <h1 class="lead-header">We redesigned support to get out of the way, so you focus on being a helpful human.</h1>
          <p class="lead-text">Helping your customers with good answers and thoughtful direction should be a breeze, focused 100% on support - and nothing else.</p>
          <p class="lead-text">C'mon, let's see it in action.</p>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="section section-half-page section-screenshots">
  <div class="page-middle">
    <div class="row screenshot-images">
      <div class="screenshot">
        <div class="inner">
          <%= image_tag('home/widget_light.png') %>
        </div>
      </div>
      <div class="screenshot screenshot-middle">
        <div class="inner">
          <%= image_tag('home/app_light.png') %>
        </div>
      </div>
      <div class="screenshot">
        <div class="inner last">
          <%= image_tag('home/email_light.png') %>
        </div>
      </div>
    </div>
    <div class="row screenshot-text">
      <div class="screenshot">
        <div class="inner">
          <p>Don’t make your customers swim through hundreds of choices.</p>
        </div>
      </div>
      <div class="screenshot screenshot-middle">
        <div class="inner">
          <p>You want to support customers not master a complex interface.</p>
        </div>
      </div>
      <div class="screenshot">
        <div class="inner last">
          <p>Your cusotmers see an email from you, a person, a helper.</p>
        </div>
      </div>
    </div>
  </div>
</div>


<script>
$(document).on('ready page:load', function() {
  var windowHeight = $(window).outerHeight();
  $('.section-full-page').css('height', (windowHeight - 25) + 'px');
  $('.section-half-page').css('height', ((windowHeight - 25) / 2.0) + 'px');
  $('.screenshot-images img').addClass("animated bounceInUp").one('webkitAnimationEnd mozAnimationEnd MSAnimationEnd oanimationend animationend', function(){
    $(this).removeClass();
    $('.screenshot-images img').animate({opacity: .3}, 200)
  });
  var startedAnimation = false;
  $(window).scroll(function() {
     if($(window).scrollTop() > 400 && startedAnimation == false) {
       startAnimation()
       startedAnimation = true;
     }
  });
});

function startAnimation() {
  animateScreen(0);
  setTimeout('animateScreen(1)', 5000);
  setTimeout('animateScreen(2)', 9000);
  setTimeout(finishAnimation, 13000);
}

function animateScreen(screen) {
  var screenshot_image = $('.screenshot-images .inner').eq(screen).find('img')
  $('.screenshot-images img').not(screenshot_image).animate({opacity: .3}, 200);
  screenshot_image.animate({opacity: 1}, 300).addClass('pulse');

  var screenshot_text = $('.screenshot-text .inner').eq(screen)
  $('.screenshot-text .inner').removeClass('focused animated flash')
  screenshot_text.addClass('animated pulse focused')
}

function finishAnimation() {
  $('.screenshot-images img').animate({opacity: 1}, 800);
  $('.screenshot-text .inner').addClass('focused')
}
</script>
